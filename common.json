{
  "id": "http://schema.ninjablocks.com/common",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Common NinjaBlocks definitions",
  "definitions": {

    "thing-id": {
      "title": "Thing identifier",
      "$ref": "#/definitions/uuid"
    },

    "device-id": {
      "title": "Device identifier",
      "$ref": "#/definitions/ninja-id"
    },

    "channel-id": {
      "title": "Channel identifier",
      "$ref": "#/definitions/ninja-id"
    },

    "ninja-id": {
      "title": "Ninja identifier",
      "description": "Used for ids that are hashed from outside 'natural keys' like a MAC address",
      "type": "string",
      "pattern": "^[0-9a-f]{10}$"
    },

    "uuid": {
      "title": "UUID Version 4",
      "description": "See: http://tools.ietf.org/html/rfc4122",
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
    }

  }
}
