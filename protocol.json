{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://schema.ninjablocks.com/protocol",
  "description": "A NinjaBlocks Device protocol - (Just a service that is required to have a 'state' event)",
  "allOf": [
    { "$ref": "/service#" },
    {
      "properties": {
        "events": {
          "required": ["state"]
        }
      },
      "required": ["events"]
    }
  ]
}
