{
  "id": "http://schema.ninjablocks.com/protocol/external.holiday.by.moorescloud",
  "$schema": "/protocol",

  "methods": {
    "setHolidayLights": {
      "description": "Sets the state of all the lights. If you send a single light colour, it will be applied to all",
      "params": [
        {
          "name": "state",
          "value": { "$ref": "#/definitions/single-or-all" }
        },
        {
          "name": "emitState",
          "value": {
            "type": "boolean",
            "description": "Emit state after setting?",
            "default": "true"
          }
        }
      ],
      "returns": {
        "$ref": "/state/common#/definitions/success"
      }
    }
  },

  "events": {
    "state": { "$ref": "#/definitions/single-or-all" }
  },

  "definitions": {
    "single-or-all": {
      "oneOf": [
        { "$ref": "#/definitions/all-lights" },
        { "$ref": "#/definitions/single-lights" }
      ]
    },
    "all-lights": {
      "type": "array",
      "items": { "$ref": "#/definitions/single-light" },
      "minItems": 50,
      "maxItems": 50
    },
    "single-light": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3
    }
  }
}
