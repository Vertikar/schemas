{
  "$schema": "http://ninjablocks.com/schema/protocol",
  "id": "http://ninjablocks.com/schemas/protocol/on-off",
  "service": {
    "topic": "/device/:deviceId/channel/:channelId/on-off",
    "methods": {

      "setState": {
        "description": "Turns the device on or off",
        "params": [{"type": "boolean" }],
        "returns": {
          "description": "The new state",
          "$ref": "http://ninjablocks.com/schema/state/common#/definitions/boolean-state"
        }
      },

      "toggle": {
        "description": "Toggles the on/off state",
        "returns": {
          "description": "The new state",
          "$ref": "http://ninjablocks.com/schema/state/common#/definitions/boolean-state"
        }
      }

    }
  },
  "state": {"$ref": "http://ninjablocks.com/schema/state/common#/definitions/boolean-state"}
}