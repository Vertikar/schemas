{
  "id": "http://schema.ninjablocks.com/service/device",
  "$schema": "/service",
  "methods": {
    "start": {
      "description": "Starts the device",
      "params": [
        {
          "name": "config",
          "value": {
            "type": "object",
            "description": "Device configuration object"
          }
        }
      ],
      "returns": {
        "value": {
          "type": "boolean"
        },
        "description": "'true' indicates device started successfully"
      }
    },
    "traceroute": {
      "description": "Traces the path to the device. Depending on the device, this may stop at the driver level",
      "returns": {
        "value": {
          "type": "object",
          "properties": {
            "level": {
              "type": "string",
              "description": "What type of node is responding",
              "enum": [
                "conductor",
                "block",
                "driver",
                "(a node in between, like in the mesh)",
                "device"
              ]
            },
            "name": {
              "type": "string"
            },
            "final": {
              "type": "boolean",
              "default": false
            }
          },
          "required": [
            "level"
          ]
        }
      }
    },
    "setName": {
      "description": "Sets the name of the device.",
      "params": [
        {
          "name": "name",
          "value": {
            "type": "string",
            "description": "The device name. alpha-numeric + spaces, but different devices may not support all characters.",
            "pattern": "^[A-Za-z ]+$"
          }
        }
      ],
      "returns": {
        "value": {
          "type": "string"
        },
        "description": "The name that was saved to the device. If null, it is not possible to store the name on the device."
      }
    }
  }
}