{
  "id": "http://schema.ninjablocks.com/state/common",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Common NinjaBlocks state definitions",
  "definitions": {
    "number-timeseries": {
      "title": "Time-series number",
      "description": "Indicates that this property should be stored in the time-series database.",
      "type": "number"
    },
    "percentage": {
      "title": "Percentage",
      "allOf": [
        {
          "$ref": "#/definitions/number-timeseries"
        },
        {
          "minimum": 0,
          "maximum": 100
        }
      ]
    },
    "humidity": {
      "title": "Relative Humidity",
      "description": "Expressed as a percentage",
      "$ref": "#/definitions/percentage"
    },
    "temperature": {
      "title": "Temperature",
      "description": "In degrees Celcius (Â°C)",
      "$ref": "#/definitions/number-timeseries"
    },
    "boolean-state": {
      "title": "Boolean",
      "description": "true=on, false=off",
      "type": "boolean"
    },
    "success": {
      "title": "Success",
      "type": "boolean",
      "enum": [true]
    }
  }
}
